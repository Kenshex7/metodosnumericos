def getx1(x2,x3,x4):
    return (3+2*x2-x3-2*x4)/7

def getx2(x1,x3,x4):
    return (-2-2*x1-3*x3-x4)/8

def getx3(x1,x2,x4):
    return (5+x1-2*x4)/5

def getx4(x1,x2,x3):
    return (4-2*x2+x3)/4

x1=0
x2=0
x3=0
x4=0
error=0.01
x1a=0.00001
x2a=0.00001
x3a=0.00001
x4a=0.00001
for i in range(5):
    x1=getx1(x2,x3,x4)
    x2=getx2(x1,x3,x4)
    x3=getx3(x1,x2,x4)
    x4=getx4(x1,x2,x3)
    print("Itera: %d"%i,x1,x2,x3,x4)
    ex1=abs((x1a-x1)/x1a)
    ex2=abs((x2a-x2)/x2a)
    ex3=abs((x3a-x3)/x3a)
    ex4=abs((x4a-x4)/x4a)
    if(ex1<error and ex2<error and ex3<error and ex4<error):
        break
    x1a=x1
    x2a=x2
    x3a=x3
    x4a=x4
print("Los valores son: ")
print(x1,x2,x3,4)
print("Los errores son:")
print(ex1,ex2,ex3,ex4)

